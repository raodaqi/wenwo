<script>
  var AskId = "<%=askid%>";
  var UserName = "<%=username%>";
  var URL = "";
  // $("#modal-1").addClass("md-show");

  $(function(){
    //初始化会员卡UI
    function initVIPCard(){
      var width = $(window).width();
      var cardWidth = width > 500 ? 500 : width * 0.95;
      var cardHeight = cardWidth / 1.52;
      $(".card-content,.card-bg-img,.card-bg-img2,.card-content-next").css({
        'width': cardWidth,
        'height': cardHeight
      })
       $(".card-content,.card-content-next").css({
        'margin-top':-cardHeight/2
      })
      $(".wenwo-logo1,.wenwo-logo2").css({
        'height': cardHeight * 0.1
      })
      $(".card-dialog,.card-dialog2").css({
        'height': cardHeight * 0.1 + 10,
        'width' : cardHeight * 0.41 + 20
      })
      $(".content-box").css({
        'height': cardHeight * 0.5,
        'width' : cardWidth * 0.5,
        'left'  : cardHeight * 0.40
      })
      $(".card-bg-tip").css({
        'left': cardHeight * 0.16
      })
    }
    initVIPCard();

    $("#modal-1").on("click",function(){
      if(!$(".card-content-next").hasClass("changeCard2")){
        $(".card-content-next,.card-content").removeClass("changeCard2");
        $(".card-content-next,.card-content").removeClass("changeCard1");
        $(".card-content").addClass("changeCard1");
        $(".card-content-next").addClass("changeCard2");
      }else{
        $(".card-content-next,.card-content").removeClass("changeCard2");
        $(".card-content-next,.card-content").removeClass("changeCard1");
        $(".card-content-next").addClass("changeCard1");
        $(".card-content").addClass("changeCard2");
      }
      // $(".card-content-next,.card-content").removeClass("changeCard2");
      // $(".card-content-next,.card-content").removeClass("changeCard1");
      // $(".card-content").addClass("changeCard1");
      // $(".card-content-next").addClass("changeCard2");
    })
    // $("#modal-1").on("click",".card-content-next",function(){
    //   $(".card-content-next,.card-content").removeClass("changeCard2");
    //   $(".card-content-next,.card-content").removeClass("changeCard1");
    //   $(".card-content-next").addClass("changeCard1");
    //   $(".card-content").addClass("changeCard2");
    // })
  })
  $(".card-tip").on("click",function(){
    $("#modal-1").addClass("md-show");
  })

  $(".md-overlay").on("click",function(){
    $("#modal-1").removeClass("md-show");
  })

</script>
<script type='text/javascript' src='/js/detail.js' charset='utf-8'></script>
