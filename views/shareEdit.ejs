<% include header.ejs %>
<script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.config.js"></script>
<script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.all.min.js"> </script>
<!--建议手动加在语言，避免在ie下有时因为加载语言失败导致编辑器加载失败-->
<!--这里加载的语言文件会覆盖你在配置项目里添加的语言类型，比如你在配置项目里配置的是英文，这里加载的中文，那最后就是中文-->
<script type="text/javascript" charset="utf-8" src="/ueditor/lang/zh-cn/zh-cn.js"></script>
<style>
  body{
    overflow-y: auto !important;
  }
  .send-content{

  }
  /*#edui1,.send-content{
    display: block;
    width: 90%;
    margin: .5rem auto;
    height: 20rem;
    padding: .5rem;
    font-size: .75rem;
  }*/
  .send{
    width: 6rem;
    height: 2rem;
    line-height: 2rem;
    text-align: center;
    border-radius: .5rem;
    color: white;
    border: 1px solid #f2f2f2;
    background-color: #f88827;
    cursor: pointer;
    position: relative;
    float: right;
    margin: 2rem;
    margin-right: 5%;
  }
  .send-success{
    display: none;
  }
  .send-success{
    text-align: center;
  }
  .send-url{
    display: inline-block;
    width: 26rem;
    height: 40px;
    padding: 6px 12px;
    background-color: #fff;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin: 1rem auto;
  }
  .copy{
    display: inline-block;
    width: 3rem;
    height: 40px;
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 6px 12px;
    margin-left: .3rem;
    cursor: pointer;
  }
</style>
</head>
<body>
  <div class="send-content">
    <div>
        <script id="editor" type="text/plain" style="width:100%;height:25rem;"></script>
    </div>
    <div class="send">
      发布
    </div>
  </div>
  <div class="send-success">
    <div>发布成功</div>
    <div class="send-url"></div>
    <!-- <div class="copy">复制</div> -->
  </div>
</body>
<% include footer.ejs %>
<script>
  var ue = UE.getEditor('editor');

  $(".copy").click(function() {  
    // window.clipboardData.setData("Text", $(".send-url").val());  
    // alert('复制成功！'); 
    copyToClipboard($(".send-url").text());
  });  

  $(".send").on("click",function(){
    var detail = UE.getEditor('editor').getContent();
    console.log(detail.length);
    if(detail == '' || !detail){
      $.toast("内容不能为空");
    }else{
      var data = {
        detail: detail
      }
      $.ajax({
        type: "POST",
        data: data,
        dataType: "json",
        url: "/manage/edit",
        success: function(result) {
          if(result.code == 200){
            $.toast("发布成功");
            $(".send-content").hide();
            $(".send-success").show();
            $(".send-url").text("http://www.wenwobei.com/share/id/"+result.data.objectId);
          }else{
            $.toast("发布失败");
          }
        },
        error:function(error){
          console.log(error);
          $.toast("服务器出错");
        }
      })
    }
  })
</script>
</html>