      $scope.list = [{
        "name" : "主页",
        "url" : "index",
      },
      {
        "name" : "产品",
        "url" : "products",
      },
      {
        "name" : "联系我们",
        "url" : "contact",
      }];

      $scope.productsList = [{
        "name" : "问我",
        "id":"wenwo",
        "text":"问我-发现身边美食",
        "logoUrl" : "/img/logo.jpg",
        "downUrl" : "/img/logo.jpg"
      },
      {
        "name" : "cherry",
        "id":"cherry",
        "text":"问我-发现身边美食",
        "logoUrl" : "/img/cherry.png",
        "downUrl" : "/img/logo.jpg"
      },
      {
        "name" : "享用插件",
        "id":"pcs",
        "text":"问我-发现身边美食",
        "logoUrl" : "/img/pcs.png",
        "downUrl" : "/img/logo.jpg"
      }];

      var loadPage = "index";

      $scope.animation = "slide-right";
      $scope.isActiveItem = function(page){
        return page == loadPage;
      }
      $scope.itemActive = function(tab){
        loadPage = tab.url;
      }

      var pageLoadId = "wenwo-id";
      var pageLoad = false;

      var pageScoll = function(e){
        if(pageLoad){
          return;
        }
        pageLoad = true;
        setTimeout(function(){
          pageLoad = false;
        }, 500);
        if(e.deltaY > 0){
          if(pageLoadId == "wenwo-id"){
            pageLoadId = "cherry-id";
            $(".products-content").css({
              "transform" : "translate(-50%,-150%)"
            });
          }else{
            pageLoadId = "pcs-id";
            $(".products-content").css({
              "transform" : "translate(-50%,-250%)"
            });
          }
        }else{
          if(pageLoadId == "pcs-id"){
            pageLoadId = "cherry-id";
            $(".products-content").css({
              "transform" : "translate(-50%,-150%)"
            });
          }else{
            pageLoadId = "wenwo-id";
            $(".products-content").css({
              "transform" : "translate(-50%,-50%)"
            });
          }
        }
      }

      /*IE注册事件*/   
      if(document.attachEvent){   
         document.attachEvent('onmousewheel',pageScoll);   
      } 
      /*注册事件*/   
      if(document.addEventListener){   
         document.addEventListener('DOMMouseScroll',pageScoll,false);   
      }//W3C

      window.onmousewheel=document.onmousewheel=pageScoll;

    });
  </script>

