        resizeEnable: true,
        zoom:20,
        center: [lng,lat]
      });
      var map = new AMap.Marker({
        map : map,
        position: [lng,lat],
        draggable: true,
        cursor: 'move',
        raiseOnDrag: true,
        clickable:true
      });
      map.setMap(map);
    }
